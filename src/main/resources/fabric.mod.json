{
  "schemaVersion": 1,
  "id": "fth",
  "version": "${version}",

  "name": "Fabric Smith",
  "description": "I'm thinking on a description",
  "authors": [
    "Rochedo098"
  ],
  "contact": {
    "homepage": "https://rochedo098.github.io/",
    "sources": "https://github.com/Rochedo098/FabricSmith"
  },

  "license": "MIT",
  "icon": "assets/fth/icon.png",

  "environment": "*",
